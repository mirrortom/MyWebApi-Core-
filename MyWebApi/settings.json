// 自定义配置文件
{
  // kestrel的监听地址和端口
  "urls": [ "http://localhost:50000" ],
  // 开始静态文件,1=开启,0或其它=不启用
  "enableStatic": 1,
  // 默认页面: >=1个.使用相对路径(相对web根目录,默认是wwwroot)
  "defaultDoc": [ "index.html", "index.htm" ],
  // 虚拟目录: {fdir:"物理路径(相对目录,从AppContext.BaseDirectory目录开始)",refdir:"url映射路径,斜杠/打头"}
  "virtualDir": [
    {
      "fdir": "staticdir1",
      "refdir": "/sd1"
    },
    {
      "fdir": "staticdir2",
      "refdir": "/sd2"
    }
  ]
}
